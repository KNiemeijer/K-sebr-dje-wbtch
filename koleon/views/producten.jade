			section.content
				h2.w3-warning W3
				#id01.modal
					span.close(onclick="document.getElementById('id01').style.display='none'", title='Close Modal') ×
					// Modal Content
					form.modal-content.animate(method='post')
						.modal-container
							label
								b Username
							input#username(type='text', placeholder='Enter Username', name='username', required='', autofocus)
							label
								b Password
							input(type='password', placeholder='Enter Password', name='password', required='')
							button.loginbutton(type='submit') Login
							input(type='checkbox', name='remember' checked='checked')
							|	Remember me
						.modal-container(style='background-color:#f1f1f1')
							button.cancelbtn(type='button', onclick="document.getElementById('id01').style.display='none'") Cancel
							span.psw
								a(href='#') Forgot password?
				div(style='overflow-x:auto;')
					section.orderProductsContainer
						input.search#searchProducts(type='text', name='search', placeholder='Zoek naar producten..')
						div.orderProducts 	
							| Sorteren op: 
							select(id='orderby')
								option(value='Price ASC') Prijs - Laag naar hoog
								option(value='Price DESC') Prijs - Hoog naar Laag
								option(value='ProductName ASC') Naam - van A tot Z
								option(value='ProductName DESC') Naam - van Z tot A
					aside.sortProductsContainer
